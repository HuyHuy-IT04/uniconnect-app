<resources>
    <style name="LabelStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="EditStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@drawable/bg_edittext_rounded</item>
    <item name="android:padding">12dp</item>
    <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/bg_circle_white</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="MenuItemText">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">#4A90E2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="NavTextActive" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavTextInactive" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
    </style>

</resources>