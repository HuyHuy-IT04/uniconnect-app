<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    tools:context=".MainActivity">

    <!-- Tiêu đề lớn: Chào mừng đến với UniConnect -->
    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chào mừng đến với UniConnect"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp" />

    <!-- Mô tả phụ -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nền tảng kết nối sinh viên và quản lý học vụ"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAppTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- NÚT CHUYỂN HƯỚNG ĐĂNG NHẬP (ID: btnNavigateToLogin) -->
    <Button
        android:id="@+id/btnNavigateToLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ĐĂNG NHẬP"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@+id/btnNavigateToRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"
        style="@style/Widget.AppCompat.Button.Colored" />

    <!-- NÚT CHUYỂN HƯỚNG ĐĂNG KÝ (ID: btnNavigateToRegister) -->
    <Button
        android:id="@+id/btnNavigateToRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TẠO TÀI KHOẢN MỚI (Đăng ký)"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@+id/tvHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <!-- Footer -->
    <TextView
        android:id="@+id/tvHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dự án phát triển ứng dụng di động"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>